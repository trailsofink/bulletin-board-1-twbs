<div class="card">
  <div class="card-header d-flex align-items-center">
    <h1 class="h6">
      All boards
    </h1>
    <button
      class="btn btn-outline-success ms-auto"
      type="button"
      data-bs-toggle="modal"
      data-bs-target="#newBoardModal"
    >Add a new board</button>
  </div>
  <ul class="list-group list-group-flush">
    <% @list_of_boards.each do |a_board| %>
      <a class="list-group-item d-flex" href="/boards/<%= a_board.id %>">
        <%= a_board.name %>
        <div class="ms-auto">
          <i class="fa-solid fa-chevron-right"></i>
        </div>
      </a>
    <% end %>
  </ul>
</div>

<div
  class="modal fade"
  id="newBoardModal"
  tabindex="-1"
  aria-labelledby="newBoardModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header d-flex">
        <h1 class="modal-title fs-5" id="newBoardModalLabel">
          New board
        </h1>
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="d-flex flex-column mb-3">
            <label class="form-label" for="name_box">
              Name
            </label>

            <input class="form-control" type="text" id="name_box" name="query_name">
          </div>

          <div class="d-grid">
            <button class="btn btn-success">
              Add board
            </button>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
